    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_day1_layout">

    <fragment
        android:id="@+id/nav_day1_layout"
        android:name="due.giuaky221121514144.ui.Day1_Layout.LayoutFragment"
